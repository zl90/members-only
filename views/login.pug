extends layout 

block content
    if (user)
        div(class='login-page-container')
            h1 Welcome back, #{user.username}!
            form(method='get' action='/')
                button(type="submit" class='generic-button')
                    i(class="material-icons") loyalty 
                    | Main Page
            form(method='get' action='/users/account')
                button(type="submit" class='generic-button')
                    i(class="material-icons blue") person 
                    | My Account
            form(method='post' action='/users/logout')
                button(type="submit" class='generic-button')
                    i(class="material-icons blue") logout 
                    | Log Out
    else
        div(class='login-page-container')
            div(class='avatar-container')
                    img(src='/images/default.png' alt='Avatar' class='avatar-large')
            h1 Log In
            form(action='' method='POST' class="signup-form" autocomplete="off")
                div(class='form-element-container')
                    label(for='username') Username
                    input(name='username' placeholder='username...' type='text' required=true)
                div(class='form-element-container')
                    label(for='password') Password
                    input(name='password' type='password' placeholder='password...' required=true)
                button(type="submit" class='generic-button light')
                    i(class="material-icons blue") login 
                    | Log In
            if (errors)
                div(class='error-container')
                    h2 Error: 
                    ul 
                        each error in errors 
                            li= error.msg
