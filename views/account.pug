extends layout 

block content
    if (user)
        img(src=user.avatar alt='Avatar' class='avatar-large')
        h1 Account: #{user.username}
        p User type: #{user.type}

        form(method='get' action='/stories/create')
            button(type="submit") Create New Story 

        h2 Stories you've written:
        ul
            each story in stories 
                li
                    div(class='story-container')
                        h3= story.title 
                        p= story.content 
                        p= story.created 
                        p= story.author.username
                        if (user.username === story.author.username || user.type === 'admin')
                        a(href=story.deleteUrl) Delete
    else 
        p Not logged in